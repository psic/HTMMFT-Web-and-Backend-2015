<% current=0 %>
<% inline = 0 %>

<div style="margin:30px;border-radius:20px;background-color:white;color:black;" align="center">
<table border="1" class="stat_tab">
<tr>
<% i=1 %>
<% @saison.each do |match| %>

<% if (i % 2 == 1) %>
<% @classe = "equipe_impaire" %>
<% else %>
<% @classe = "equipe_paire" %>
<% end %>
	
		<% if current != match.num_journee %>
			
			
			<% if current != 0 %>
				</table>
