	<%= check_box_tag(joueur.id, joueur.id, false, :onclick=>"addPlayerToField(#{joueur.gch}, #{joueur.ctr},#{joueur.drt},#{joueur.off},#{joueur.def},#{@couleur[0].couleur1},#{@couleur[0].couleur2},#{joueur.numero},this);")%>
<% end %>

</td>

