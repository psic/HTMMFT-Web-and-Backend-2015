<% i=1 %>
<% @joueurs.each do |joueur| %>

<% 
trouve=false;
couleur_nom=""
@joueur_numero.each do |numero|
	if numero == joueur.numero
		trouve = true
	end
end
@remp_numero.each do |numero|
	if numero == joueur.numero
